<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory name="ERP">
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">123456</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/ERP</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.search.autoregister_listeners">false</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.validator.apply_to_ddl">false</property>
        <mapping class="com.mi.model.Company" />
        <mapping class="com.mi.model.Designation" />
        <mapping class="com.mi.model.Branch" />
        <mapping class="com.mi.model.User" />
        <mapping class="com.mi.model.UserExperience" />
        <mapping class="com.mi.model.Modules" />
        <mapping class="com.mi.model.UserRoleRelation" />
        <mapping class="com.mi.model.Role" />
        <mapping class="com.mi.model.UserEducationDetails" />
        <mapping class="com.mi.model.LoginManager" />
        <mapping class="com.mi.model.Organisation" />
        <mapping class="com.mi.model.RoleModuleRelation" />
    </session-factory>
</hibernate-configuration>
